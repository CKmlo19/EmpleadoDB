@model EmpleadoModel  // se utiliza la clase en el formulario
@{
    ViewData["Title"] = "Insertar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        Insertar Empleado
    </div>
    <div class="card-body">
        
        <form asp-action="Insertar" asp-controller="Empleado" method="post">
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="Nombre" type="text" class="form-control">
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Salario</label> 
                <input asp-for="Salario" class="form-control">
                <span asp-validation-for="Salario" class="text-danger"></span>

            </div>
            <button type="button" class="btn btn-primary btn-abrir-modal">Insertar</button>
            <dialog id="modal">
                <h2 class="Inserccion">Inserccion Exitosa</h2>
                <a asp-action="Listar" asp-controller="Empleado" class="btn btn-success">OK</a>
            </dialog>
            <a asp-action="Listar" asp-controller="Empleado" class="btn btn-warning">Regresar</a>
        </form>
    </div>
</div>


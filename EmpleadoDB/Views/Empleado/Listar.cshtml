@model List<EmpleadoModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista Empleados</h1>
<div class="card">
    <div class="card-header">
        Insertar Empleado
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Empleado" class="btn btn-success">Insertar</a>
        <hr />
        <table class="table table-bordered" bgcolor="black" width="700">
            <thead>
                <tr bgcolor="grey">
                    <th>Nombre</th>
                    <th>Salario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) // c# en html
                {// se crea una nueva fila 
                    <tr> <!-- Se inserta los datos del modelo-->
                        <td>@item.Nombre</td> 
                        <td>@item.Salario</td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>
